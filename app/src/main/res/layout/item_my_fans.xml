<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <com.aiqing.kaiheiba.widget.CircleImageView
        android:id="@+id/fans_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/avatar_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fans_name"
        style="@style/ContentTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="超级大仙"
        app:layout_constraintBottom_toTopOf="@+id/fans_des"
        app:layout_constraintLeft_toRightOf="@id/fans_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fans_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/prof_female_n"
        app:layout_constraintBottom_toBottomOf="@id/fans_name"
        app:layout_constraintLeft_toRightOf="@id/fans_name"
        app:layout_constraintTop_toTopOf="@id/fans_name" />

    <TextView
        android:id="@+id/fans_des"
        style="@style/ContentTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="一定要好好上班fasdfasdfasdfasdfasdfasdfasdasdfasdfasdfasdfsd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/fans_name"
        app:layout_constraintLeft_toRightOf="@id/fans_avatar"
        app:layout_constraintRight_toLeftOf="@+id/fans_follow"
        app:layout_constraintTop_toBottomOf="@id/fans_name" />

    <Button
        android:id="@+id/fans_follow"
        style="@style/ContentTextStyle"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:text="已关注"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>