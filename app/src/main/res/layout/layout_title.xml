<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:paddingTop="5dp">

    <View
        android:id="@+id/nav_bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/title_bottom_shadow"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/nav_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/prof_left_margin"
        android:src="@mipmap/iv_title_back"
        app:layout_constraintBottom_toTopOf="@id/nav_bottom_shadow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nav_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="个人资料"
        android:textColor="#2295CB"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/nav_bottom_shadow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/nav_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>