<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:indicator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.aiqing.kaiheiba.imagebrowser.ImageBrowserViewPager
        android:id="@+id/vp_image_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.aiqing.kaiheiba.widget.XCircleIndicator
        android:id="@+id/xCircleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        indicator:indicator_circleInterval="10dp"
        indicator:indicator_fillColor="#F96A0E"
        indicator:indicator_radius="4dp"
        indicator:indicator_strokeColor="#cecece" />
</FrameLayout>