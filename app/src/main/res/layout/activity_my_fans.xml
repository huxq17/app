<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_content">

    <include
        android:id="@+id/nav_layout"
        layout="@layout/layout_title"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/left_divider"
        android:layout_width="1.2dp"
        android:layout_height="0dp"
        android:background="#CDCDCD"
        app:layout_constraintBottom_toBottomOf="@+id/myfans_list"
        app:layout_constraintTop_toTopOf="@+id/myfans_list" />

    <View
        android:id="@+id/right_divider"
        android:layout_width="1.2dp"
        android:layout_height="0dp"
        android:background="#CDCDCD"
        app:layout_constraintBottom_toBottomOf="@+id/myfans_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myfans_list" />

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CDCDCD"
        app:layout_constraintTop_toBottomOf="@+id/nav_layout" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myfans_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:overScrollMode="ifContentScrolls"
        android:paddingLeft="@dimen/prof_left_margin"
        android:paddingRight="@dimen/prof_left_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/left_divider"
        app:layout_constraintRight_toLeftOf="@id/right_divider"
        app:layout_constraintTop_toBottomOf="@id/top_divider" />

</android.support.constraint.ConstraintLayout>