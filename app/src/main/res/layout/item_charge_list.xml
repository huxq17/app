<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgSpace"
        app:layout_constraintTop_toTopOf="parent" />

    <com.aiqing.kaiheiba.widget.CircleImageView
        android:id="@+id/icon_lingshi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/prof_left_margin"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_list_lingshi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/middle_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/bgSpace"
        app:layout_constraintTop_toBottomOf="@id/icon_lingshi" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FAFAFA"
        app:layout_constraintTop_toBottomOf="@id/middle_divider" />

    <TextView
        android:id="@+id/lingshi_num"
        style="@style/ContentTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="零食包100个"
        app:layout_constraintBottom_toBottomOf="@+id/icon_lingshi"
        app:layout_constraintLeft_toRightOf="@id/icon_lingshi"
        app:layout_constraintTop_toTopOf="@id/icon_lingshi" />


    <Button
        android:id="@+id/bt_buy_lingshi"
        style="@style/ContentTextStyle"
        android:layout_width="70dp"
        android:layout_marginRight="@dimen/prof_left_margin"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:text="购买"
        app:layout_constraintBottom_toBottomOf="@id/icon_lingshi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon_lingshi" />
</android.support.constraint.ConstraintLayout>